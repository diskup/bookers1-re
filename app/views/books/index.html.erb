<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book) %></td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: '本当に消しますか？' } %></td>
  </tr>
  <% end %>
</table>
<h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました。
  <%= @book.errors.full_messages.each do |m| %>
    <%= m %>
  <% end %>
<% end %>
<%= form_with model: @book, local: true do |f| %>
  <label>title</label>
  <div><%= f.text_field :title %></div>
  <label>body</label>
  <div><%= f.text_area :body %></div>
  <div><%= f.submit "Create Book" %></div>
<% end %>

