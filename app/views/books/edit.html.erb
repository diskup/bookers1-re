<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました。
  <%= @book.errors.full_messages.each do |m| %>
    <%= m %>
  <% end %>
<% end %>
<%= form_with model: @book, local: true do |f| %>
  <label>title</label>
  <div><%= f.text_field :title %></div>
  <label>body</label>
  <div><%= f.text_area :body %></div>
  <div><%= f.submit "Update Book" %></div>
<% end %>
<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
